<h1 class="mt-3 mb-5">All our flats (<%= @flats.length %>)</h1>
<ul class="row">
<% @flats.each do |flat| %>
<li class= "col-lg-4 mt-3 mb-5 border" style="width: 20vw">
  <div id="card" class="bg-light ps-3 pe-3 ">
    <h2 class="pt-1"><%= flat.name %></h2>
    <p class="mb-2"><%= flat.address %></p>
    <div>
      <i class="fa-solid fa-people-group ms-2 me-2"></i><%= flat.number_of_guests %>
      <i class="fa-solid fa-euro-sign ms-4 me-2"></i><%= flat.price_per_night %>
    </div>
  </div>
  <div>
    <%= link_to "More info", flat_path(flat), class: "ms-4 m-auto" %>
  </div>
</li>
<% end %>
</ul>
